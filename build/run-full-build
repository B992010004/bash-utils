#!/usr/bin/env bash

# Identify the type of build tool that we have and run it

BUILD_SCRIPTS_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source "${BUILD_SCRIPTS_DIR}/../common/utils"

if [[ -f "build.sh" ]]; then
    type="custom script"
    cmd="./build.sh"
elif [[ -f "pom.xml" ]]; then
    retries=3
    type="maven"
    cmd="mvn -Dsurefire.rerunFailingTestsCount=${retries} -Dfailsafe.rerunFailingTestsCount=${retries} clean install"
elif [[ -f "build.sbt" ]]; then
    type="sbt"
    cmd="sbt test it:test func:test"
elif [[ -f "build.gradle" ]]; then
    type="gradle"
    cmd="gradle clean install"
else
    fail "Could not determine the type of build to run, are you in the right folder?"
fi

log "Running ${type} build..."
${cmd}
result=$?

echo -e "\a\a\a"
exit ${result}
