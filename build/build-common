#!/usr/bin/env bash

# Common utilities to all the build-related scripts


rebase_if_remote() {
    remote=$(remote-branch-name)

    if [ -n "${remote}" ]; then
        git pull -r || exit 1
    fi
}

push_changes() {
    remote=$(remote-branch-name)

    if [ -z "${remote}" ]; then
        git push --set-upstream origin $(branch-name) || exit 1
    else
        git push || exit 1
    fi
}
