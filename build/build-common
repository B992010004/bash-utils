#!/usr/bin/env bash

# Common utilities to all the build-related scripts


rebase_if_remote() {
    remote=$(remote-branch-name)

    if [ -n "${remote}" ]; then
        git pull -r || exit 1
    fi
}

ensure_remote() {
    remote=$(remote-branch-name)
    local=$(branch-name)

    if [ -z "${remote}" ]; then
        git branch --set-upstream origin ${local}
    fi
}
